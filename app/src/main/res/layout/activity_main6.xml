<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#6AE7D8"
    >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="370dp"
        android:layout_height="670dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="50dp"
        android:layout_height="52dp"
        android:background=""
        android:text="<"
        android:textColor="@color/black"
        android:textSize="30dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="33dp"
        android:id="@+id/button1"/>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="87dp"
        android:layout_height="81dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image3"

        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="72dp"
        android:layout_height="91dp"
        android:layout_marginStart="270dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image2" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="140dp"
            android:layout_marginRight="30dp"
            android:text="Conditions for receiving citizen requests to obtain and exchange passports:"
            android:textColor="#0000FF"
            android:textSize="25dp"
            android:gravity="center"
            android:id="@+id/txt1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/viewid"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:text="-The citizen’s possession of a valid residency abroad, in addition to a closed travel ticket and a receipt proving payment for it, provided that the travel date is within a maximum of 7 days from the date of submitting the application."
            android:textColor="@color/black"
            android:textSize="16dp"
            android:gravity="center"
            android:id="@+id/txt2"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:text="-The citizen’s possession of a valid visa affixed to the passport, in addition to a travel ticket and a receipt proving payment for it,provided that the travel date is within a maximum period of 7 days from the date of submitting the application"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:gravity="center"
            android:id="@+id/txt3"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:text="-The citizen’s possession of a proven embassy appoitment to obtain a visa within a maximum period of 7 days from the date of submitting the application"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:gravity="center"
            android:id="@+id/txt4"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="40dp"
            android:background="#040B51"
            android:text="Next"
            android:id="@+id/button2"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>